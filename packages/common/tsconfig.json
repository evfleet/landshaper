{
  "compilerOptions": {
    /* Language and Environment */
    "lib": ["es2021"],
    "target": "es2021",

    /* Modules */
    "module": "commonjs",

    /* Emit */
    "outDir": "./dist",
    "declaration": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    
    /* Completeness */
    "skipLibCheck": true,
  }
}
